{
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "azure-pipelines.ya?ml"
      ],
      "matchStrings": [
        "ref:\\s*refs/tags/(?<currentValue>v?[0-9]+\\.[0-9]+\\.[0-9]+)"
      ],
      "depNameTemplate": "pipelineTemplate",
      "datasourceTemplate": "git-tags",
      "packageNameTemplate": "lenn-hnkl/pipeline-template"
    }
  ]
}
